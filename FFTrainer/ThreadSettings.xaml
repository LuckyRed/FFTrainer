        <Label Content="{DynamicResource Read}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="{DynamicResource Write}" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="80"/>
