        <Button Content="{DynamicResource Default}" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Width="75" FontWeight="Bold" BorderThickness="1" Click="Button_Click_1"/>

    </Grid>
</Window>
