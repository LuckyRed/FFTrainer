        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFTrainer"
        mc:Ignorable="d"
        Title="WeatherSelector" Height="144.5" Width="237.334" WindowStartupLocation="CenterOwner">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="15,38,0,0" VerticalAlignment="Top" Width="197"/>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Left" Margin="137,76,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label Content="Select a weather for your current zone." HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>

    </Grid>
